<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wuproject.morgagecalculator.MainScreen">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="92dp"
        android:layout_height="35dp"
        android:text="Monthly Payment"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="262dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="103dp"
        android:layout_height="47dp"
        android:text="Total interest paid"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="319dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="103dp"
        android:layout_height="44dp"
        android:text="Total property tax paid"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="374dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="105dp"
        android:layout_height="44dp"
        android:text="Pay off Date"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="430dp" />

    <TextView
        android:id="@+id/TotalPTax"
        android:layout_width="164dp"
        android:layout_height="45dp"
        android:text="TotalPropTax"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="374dp" />

    <TextView
        android:id="@+id/MonthlyPayment"
        android:layout_width="167dp"
        android:layout_height="46dp"
        android:text="Payment"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="262dp" />

    <TextView
        android:id="@+id/PayOff"
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:text="Date"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="430dp" />

    <TextView
        android:id="@+id/InterestTotal"
        android:layout_width="170dp"
        android:layout_height="43dp"
        android:text="Total"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="319dp" />

    <TextView
        android:id="@+id/HomeValueView"
        android:layout_width="79dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:text="Home Value"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="7dp" />

    <TextView
        android:id="@+id/downPaymentView"
        android:layout_width="78dp"
        android:layout_height="30dp"
        android:text="Down Payment"
        tools:layout_editor_absoluteY="60dp"
        tools:layout_editor_absoluteX="7dp" />

    <TextView
        android:id="@+id/InterestRateView"
        android:layout_width="89dp"
        android:layout_height="31dp"
        android:text="Interest Rate"
        tools:layout_editor_absoluteY="112dp"
        tools:layout_editor_absoluteX="6dp" />

    <TextView
        android:id="@+id/TermsView"
        android:layout_width="88dp"
        android:layout_height="37dp"
        android:layout_marginTop="18dp"
        android:text="Terms"
        app:layout_constraintTop_toBottomOf="@+id/InterestRateView"
        tools:layout_editor_absoluteX="6dp" />

    <TextView
        android:id="@+id/PropertyTaxView"
        android:layout_width="92dp"
        android:layout_height="26dp"
        android:layout_marginTop="217dp"
        android:text="Property Tax Rate"
        tools:layout_editor_absoluteX="6dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="64dp" />

    <EditText
        android:id="@+id/HomeInput"
        android:layout_width="159dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="number"
        android:text="Home Value Here"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/DownInput"
        android:layout_width="160dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="number"
        android:text="Down Payment"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="60dp" />

    <EditText
        android:id="@+id/InterestInput"
        android:layout_width="159dp"
        android:layout_height="33dp"
        android:ems="10"
        android:inputType="number"
        android:text="Interest Rate "
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/PropertyInput"
        android:layout_width="161dp"
        android:layout_height="33dp"
        android:layout_marginLeft="14dp"
        android:ems="10"
        android:inputType="number"
        android:text="Property Tax Rate"
        app:layout_constraintLeft_toRightOf="@+id/PropertyTaxView"
        tools:layout_editor_absoluteY="217dp" />

    <EditText
        android:id="@+id/MorgageLoanInput"
        android:layout_width="159dp"
        android:layout_height="42dp"
        android:layout_column="1"
        android:ems="10"
        android:inputType="number"
        android:text="15"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="161dp" />

</android.support.constraint.ConstraintLayout>
